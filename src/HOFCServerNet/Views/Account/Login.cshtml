@using System.Collections.Generic
@using Microsoft.AspNet.Http
@using Microsoft.AspNet.Http.Authentication
@using Microsoft.AspNet.Identity;
@using HOFCServerNet.Data.Models;
@using HOFCServerNet.ViewModels.Account;
@model LoginViewModel
@inject SignInManager<ApplicationUser> SignInManager


<form asp-controller="Account" asp-action="Login" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post" role="form">
    <h2 class="mdl-card__title-text">Connexion</h2>
    <div class="form-group">
        <label asp-for="Email">Email</label>
        <input asp-for="Email" class="form-control" type="text" placeholder="Nom d'utilisateur" />
    </div>
    <div class="form-group">
        <label asp-for="Password">Password</label>
        <input class="form-control" asp-for="Password" type="password" placeholder="Mot de passe"/>
    </div>
    <button type="submit" class="btn btn-default">
        Se connecter
    </button>
    @*@<a asp-action="Register" class="mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect">
        S'enregistrer
    </a>
    <a asp-action="ForgotPassword" class="mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect">
        Mot de passe oublié
    </a>*@
</form>
@{
    var loginProviders = SignInManager.GetExternalAuthenticationSchemes().ToList();
    if (loginProviders.Count > 0)
    {
        <form asp-controller="Account" asp-action="ExternalLogin" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post" class="form-horizontal" role="form">
                        
            <div>
                <p>
                    @foreach (var provider in loginProviders)
                    {
                        <button type="submit" class="btn btn-social btn-@provider.AuthenticationScheme.ToLower()" name="provider" value="@provider.AuthenticationScheme" title="Log in using your @provider.DisplayName account">
                            <span class="fa fa-@provider.AuthenticationScheme.ToLower()"></span> Se connecter avec @provider.AuthenticationScheme
                        </button>
                    }
                </p>
            </div>
        </form>
    }
}
