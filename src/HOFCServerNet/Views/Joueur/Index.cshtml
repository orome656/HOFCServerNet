@using HOFCServerNet.ViewModels.Joueur;
@using System.Security.Claims

@model JoueurViewModel

@if (Model.Message != null)
{
    <div>
        <div class="alert alert-success alert-dismissible center-block" style="width:90%" role="alert">
            <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            @Model.Message
        </div>
    </div>
}
<table class="table table-striped">
    <thead>
        <tr>
            <th>Nom</th>
            <th>Prénom</th>
            <th>Equipe</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (JoueurDetailsViewModel joueur in Model.Joueurs)
        {
            <tr>
                <td>@joueur.Nom</td>
                <td>@joueur.Prenom</td>
                <td>@joueur.Categorie</td>
                <td>
                    @if (User.IsInRole("Contributor"))
                    {
                        <a asp-controller="Joueur" asp-action="Details" asp-route-id="@joueur.Id"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></a>
                        <a asp-controller="Joueur" asp-action="Remove" asp-route-id="@joueur.Id"><span class="glyphicon glyphicon-trash" aria-hidden="true"></span></a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
@if (User.IsInRole("Contributor"))
{
    <a asp-controller="Joueur" asp-action="Details">
        <button class="btn btn-default">Ajouter</button>
    </a>
}