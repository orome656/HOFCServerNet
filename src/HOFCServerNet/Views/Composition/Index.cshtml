@model HOFCServerNet.ViewModels.Composition.IndexViewModel

<table class="table table-striped">
    <thead>
        <tr>
            <th>Date</th>
            <th>Equipe Domicile</th>
            <th>Equipe Extérieure</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var match in Model.Matchs)
        {
            <tr>
                <td>@match.Date.ToString("dd/MM/yyyy HH:mm")</td>
                <td>@match.Equipe1</td>
                <td>@match.Equipe2</td>
                <td>
                    @*if (User.IsInRole("Contributor"))
                    {*@
                        <a asp-controller="Composition" asp-action="Details" asp-route-id="@match.Id"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></a>
                        <a data-joueur-id="@match.Id" class="deleteButton"><span class="glyphicon glyphicon-trash" aria-hidden="true"></span></a>
                    @*}*@
                </td>
            </tr>
        }
    </tbody>
</table>

