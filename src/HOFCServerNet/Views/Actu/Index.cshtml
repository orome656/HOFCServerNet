@using HOFCServerNet.Data.Models;

@{ 
    List<Actu> actus = (List<Actu>)ViewData["actus"];
}

@foreach (Actu actu in actus)
{
    <div class="mdl-card mdl-shadow--2dp demo-card-square">
        <div class="mdl-card__title mdl-card--expand" style="color: #fff;background: url('@actu.ImageURL') bottom right 15% no-repeat #46B6AC;background-size:cover;">
            <h2 class="mdl-card__title-text">@actu.Titre</h2>
        </div>
        <div class="mdl-card__supporting-text">
            @actu.Texte
        </div>
        <div class="mdl-card__actions mdl-card--border">
            <a href="@actu.URL" class="mdl-button mdl-button--accent mdl-js-button mdl-js-ripple-effect">
                Détails
            </a>
        </div>
    </div>
}
