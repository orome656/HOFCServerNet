@using HOFCServerNet.Data.Models;

@{
    Dictionary<string, List<Match>> matchs = (Dictionary<string, List<Match>>)ViewData["matchs"];
}

<div class="mdl-tabs mdl-js-tabs mdl-js-ripple-effect">
    <div class="mdl-tabs__tab-bar">
        <a href="#equipe1" class="mdl-tabs__tab is-active">Equipe 1</a>
        <a href="#equipe2" class="mdl-tabs__tab">Equipe 2</a>
        <a href="#equipe3" class="mdl-tabs__tab">Equipe 3</a>
    </div>
    @foreach (KeyValuePair<string, List<Match>> listMatch in matchs)
    {
    <div class="mdl-tabs__panel @(@listMatch.Key == "equipe1"?"is-active":"")" id="@listMatch.Key">
        <div class="mdl-grid">
            @foreach (Match match in listMatch.Value)
            {
                <div class="demo-charts mdl-color--white mdl-shadow--2dp mdl-cell mdl-cell--12-col ">
                    <div style="width:100%" class="textCentered">
                        @match.Date
                    </div>
                    <div class="mdl-grid">
                        @if (match.Equipe1.Contains("HORGUES ODOS"))
                    {
                            @:<img style="height:48px;width:48px" class="demo-chart mdl-cell mdl-cell--1-col mdl-cell--1-col-tablet mdl-cell--hide-phone" src="/images/hofc.png" />
                    }
                    else
                    {
                            @:<div style="height:48px;width:48px" class="demo-chart mdl-cell mdl-cell--1-col mdl-cell--1-col-tablet mdl-cell--hide-phone"></div>




                        }
                        <div class="mdl-cell mdl-cell--10-col mdl-cell--5-col-tablet mdl-cell--4-col-phone mdl-grid">
                            <div class="textCentered mdl-cell mdl-cell--4-col mdl-cell--3-col-tablet mdl-cell--1-col-phone">
                                @match.Equipe1
                            </div>
                            <div class="textCentered mdl-cell mdl-cell--2-col mdl-cell--2-col-tablet  mdl-cell--2-col-phone">
                                @match.Score1 - @match.Score2
                            </div>
                            <div class="textCentered mdl-cell mdl-cell--4-col mdl-cell--3-col-tablet mdl-cell--1-col-phone">
                                @match.Equipe2
                            </div>
                        </div>
                        @if (match.Equipe2.Contains("HORGUES ODOS"))
                    {
                            @:<img style="height:48px;width:48px" class="demo-chart mdl-cell mdl-cell--1-col mdl-cell--1-col-tablet mdl-cell--hide-phone" src="/images/hofc.png" />
                    }
                    else
                    {
                            @:<div style="height:48px;width:48px" class="demo-chart mdl-cell mdl-cell--1-col mdl-cell--1-col-tablet mdl-cell--hide-phone"></div>
                    }
                    </div>
                </div>
            }
        </div>
    </div>
    }
</div>
