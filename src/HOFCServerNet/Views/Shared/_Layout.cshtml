                            <li><a asp-controller="Calendrier" asp-action="Index" asp-route-id="equipe1">Equipe 1</a></li>
                            <li><a asp-controller="Calendrier" asp-action="Index" asp-route-id="equipe2">Equipe 2</a></li>
                            <li><a asp-controller="Calendrier" asp-action="Index" asp-route-id="equipe3">Equipe 3</a></li>
                        </ul>
                    </li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Journée <span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li><a asp-controller="Journee" asp-action="Index" asp-route-equipe="equipe1" asp-route-idJournee="1">Equipe 1</a></li>
                            <li><a asp-controller="Journee" asp-action="Index" asp-route-equipe="equipe2" asp-route-idJournee="1">Equipe 2</a></li>
                            <li><a asp-controller="Journee" asp-action="Index" asp-route-equipe="equipe3" asp-route-idJournee="1">Equipe 3</a></li>
                        </ul>
                    </li>
                    <li><a asp-controller="Joueur" asp-action="Index">Effectif</a></li>
                </ul>
                <ul class="nav navbar-nav navbar-right">
                    @await Html.PartialAsync("_LoginPartial")
                </ul>
            </div><!--/.nav-collapse -->
        </div>
    </nav>
    <div class="container-fuild">
        @RenderBody()
    </div>

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>
    <!-- Latest compiled and minified JavaScript -->
